<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: '0'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 0, 1, 1
        on_press: self.text = root.counter_increment(self.text)

    DPEAButton:
        id: test_button2
        text: "On"
        size: 100, 100
        x: root.width * 0.3
        y: root.height * 0.5
        color: 1, 0, 1, 1
        on_press: self.text = root.on_off(self.text)

    DPEAButton:
        id: test_button3
        text: "Change Motor"
        size: 200,100
        x: root.width * 0.5
        y: root.height * 0.25
        color: 1, 1, 0, 1
        on_press: motor.text = root.motoron_off(motor.text)

    DPEAButton:
        id: motor
        text: "Motor On"
        size: 200,100
        x: root.width * 0.75
        y: root.height * 0.25
        color: 0, 0, 0, 1

    Slider:
        id: slider
        size_hint: None, None
        size: 400,30
        center: root.width * 0.5, root.height * 0.75
        min: 0
        max: 100
        sensitivity: 'handle'

    Label:
        id: slider_label
        size_hint: None, None
        font_size: 30
        text: str(round(slider.value))
        center_x: root.width * 0.75
        center_y: root.height * 0.85
        color: 1, 0, slider.value / 100, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0, 1

    ImageButton:
        id: image_button
        size: 200,200
        x: root.width * 0.5
        y: root.height * 0.4
        source: 'button.jpg'
        on_press: root.imagebutton()

    #ImageButton:
        #id: animate_image_button
        #size: 200,200
        #x: root.width * 0.1
        #y: root.height * 0.8
        #source: 'roadrunner.jpeg'
        #on_press: root.animate_it()

    #SelfUpdatingLabel:
        #id: time_label
        #size_hint: None, None
        #font_size: 30
        #update_property: time.now
        #update_property_parameters: None
        #center_x: root.width * 0.5
        #center_y: root.height * 0.2
        #color: 1, 1, 1, 1
        #bold: True
        #outline_width: self.font_size * 0.1
        #outline_color: 0, 0, 0

    DPEAButton:
        id: Off_Button
        text: "Shut Down"
        size: 200,100
        x: root.width * 0.85
        y: root.height * 0.1
        color: 1, 0, 0, 1
        on_press: root.exit_program()

    DPEAButton:
        id: joystick_label
        text: "Find Joystick Position"
        size: 450,100
        x: root.width * 0.01
        y: root.height * 0.25
        color: 0, 1, 0, 1
        on_press: position.text = root.joystick_position(position.text)

    DPEAButton:
        id: position
        text: "position:"
        size: 200,100
        x: root.width * 0.3
        y: root.height * 0.075

    DPEAButton:
        id: button_pressed
        text: "Is She Pressed?"
        size: 450,100
        x: root.width * 0.01
        y: root.height * 0.75
        color: 0, 1, 1, 1
        on_press: button_label.text = root.get_button(button_label.text)

    Label:
        id: button_label
        size_hint: None, None
        font_size: 30
        text: ""
        center_x: root.width * 0.1
        center_y: root.height * 0.7
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    DPEAButton:
        id: button_combo_pressed
        text: "Are They Pressed"
        size: 450,100
        x: root.width * 0.01
        y: root.height * 0.55
        color: 0, 1, 1, 1
        on_press: button_combo_label.text = root.get_button_combo(button_combo_label.text)

    Label:
        id: button_combo_label
        size_hint: None, None
        font_size: 30
        text: ""
        center_x: root.width * 0.1
        center_y: root.height * 0.5
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    Label
        id: x
        text: "0.0"
        font_size: self.width * .18
        size_hint: .2, .1
        pos_hint: {"center_x": .075, "center_y":0.45}
        color: 0, 0, 0, 1

    Label
        id: y
        text: "0.0"
        font_size: self.width * .18
        size_hint: .2, .1
        pos_hint: {"center_x": .2, "center_y":0.45}
        color: 0, 0, 0, 1


<NewScreen>:
    name: 'new'

    ImageButton:
        id: image_button2
        size: 400,400
        x: root.width * 0.25
        y: root.height * 0.4
        source: 'lasangg.jpg'
        on_press: root.imagebutton2()

    ImageButton:
        id: animate_image_button2
        size: 400,400
        x: root.width * 0.65
        y: root.height *0.4
        source: 'coyote.jpg'
        on_press: root.animate_it2()